  <script>
    const hamburger = document.getElementById('hamburger');
    const navLinks = document.getElementById('nav-links');
    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('active');
    });

    // Preloader
    window.addEventListener('load', () => {
      const preloader = document.getElementById('preloader');
      const content = document.querySelector('.content');
      preloader.style.display = 'none';
      content.classList.remove('hidden');
      content.classList.add('fade-in');
    });


  const sections = document.querySelectorAll('.section');

  window.addEventListener('scroll', () => {
    const triggerBottom = window.innerHeight * 0.8;

    sections.forEach(section => {
      const sectionTop = section.getBoundingClientRect().top;

      if(sectionTop < triggerBottom) {
        section.classList.add('active');
      }
    });
  });
const featureBoxes = document.querySelectorAll('.feature-box');

window.addEventListener('scroll', () => {
  const triggerBottom = window.innerHeight * 0.9;

  featureBoxes.forEach(box => {
    const boxTop = box.getBoundingClientRect().top;

    if(boxTop < triggerBottom) {
      box.classList.add('active');
    }
  });
});



const outcomeBoxes = document.querySelectorAll('.outcome-box');

window.addEventListener('scroll', () => {
  const triggerBottom = window.innerHeight * 0.9;

  outcomeBoxes.forEach(box => {
    const boxTop = box.getBoundingClientRect().top;

    if (boxTop < triggerBottom) {
      box.classList.add('active');
    }
  });
});


const galleryItems = document.querySelectorAll('.gallery-item');
const displayImage = document.getElementById('display-image');
const displayCaption = document.getElementById('display-caption');

galleryItems.forEach(item => {
  item.addEventListener('click', () => {
    galleryItems.forEach(i => i.classList.remove('active'));
    item.classList.add('active');

    const img = item.querySelector('img');
    const caption = item.querySelector('.overlay').textContent;

    const srcSmall = img.src;
    const srcBig = srcSmall.replace(/\/(\d+)\/(\d+)$/, '/600/400');
    displayImage.src = srcBig;
    displayImage.alt = caption;
    displayCaption.textContent = caption;
  });
});

  document.getElementById('contactForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);

    try {
      const response = await fetch('/contact', {
        method: 'POST',
        body: new URLSearchParams(formData)
      });

      if (response.ok) {
        form.reset();
        document.getElementById('formMsg').style.display = 'block';
        setTimeout(() => {
          document.getElementById('formMsg').style.display = 'none';
        }, 3000);
      } else {
        alert('Error sending message. Please try again.');
      }
    } catch (err) {
      console.error(err);
      alert('Something went wrong.');
    }
  });

  </script>
