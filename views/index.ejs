<script>
  const toggle = document.getElementById('menu-toggle');
  const navLinks = document.getElementById('nav-links');

  toggle.addEventListener('click', () => {
    navLinks.classList.toggle('active');
  });

  const scrollIndicator = document.createElement('div');
  const scrollThumb = document.createElement('div');

  scrollIndicator.classList.add('scroll-indicator');
  scrollThumb.classList.add('scroll-thumb');

  scrollIndicator.appendChild(scrollThumb);
  document.body.appendChild(scrollIndicator);

  window.addEventListener('scroll', () => {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const scrollPercent = scrollTop / docHeight;

    scrollThumb.style.height = `${Math.max(50, scrollPercent * 100)}px`;
    scrollThumb.style.top = `${scrollPercent * 100}%`;
  });

  function scrollGallery(direction) {
    const container = document.getElementById("galleryScroll");
    const scrollAmount = container.offsetWidth / 1.5;
    container.scrollBy({
      left: direction * scrollAmount,
      behavior: 'smooth'
    });
  }
</script>


