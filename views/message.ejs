<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>üì© Messages Panel</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: #f0f2f5;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container {
      margin-top: 40px;
      max-width: 900px;
    }
    .message-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
      padding: 20px;
      margin-bottom: 20px;
      position: relative;
      transition: all 0.2s ease-in-out;
    }
    .message-card:hover {
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }
    .message-card.read {
      background-color: #e7f9ee;
    }
    .timestamp {
      font-size: 0.85rem;
      color: #888;
    }
    .actions {
      position: absolute;
      top: 15px;
      right: 15px;
      display: flex;
      gap: 5px;
    }
    .badge-status {
      font-size: 0.75rem;
    }
    @media (max-width: 576px) {
      .actions {
        position: static;
        margin-top: 10px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <a href="/admin" class="btn btn-outline-secondary mb-4">‚Üê Back to Panel</a>
    <h2 class="mb-4">üì® Received Messages</h2>

    <!-- Filter Form -->
    <form method="GET" action="/messages" class="mb-4">
      <div class="row g-2 align-items-center">
        <div class="col-auto">
          <label for="filter" class="form-label fw-semibold">Show:</label>
        </div>
        <div class="col-auto">
          <select name="filter" id="filter" class="form-select" onchange="this.form.submit()">
            <option value="" <%= !filter ? 'selected' : '' %>>All Messages</option>
            <option value="unread" <%= filter === 'unread' ? 'selected' : '' %>>Unread</option>
            <option value="read" <%= filter === 'read' ? 'selected' : '' %>>Read</option>
          </select>
        </div>
      </div>
    </form>

    <!-- Message List -->
    <% if (messages.length > 0) { %>
      <% messages.forEach(msg => { %>
        <div class="message-card <%= msg.read ? 'read' : '' %>">
          <div class="d-flex justify-content-between align-items-start flex-wrap">
            <div class="mb-2">
              <h5 class="mb-1"><%= msg.name %></h5>
              <small class="text-muted"><%= msg.email %></small>
              <p class="mt-3 mb-2"><%= msg.message %></p>
              <p class="timestamp"><i>üìÖ Received on <%= msg.createdAt.toLocaleString() %></i></p>
              <span class="badge <%= msg.read ? 'bg-success' : 'bg-warning text-dark' %> badge-status">
                <%= msg.read ? 'Read' : 'Unread' %>
              </span>
            </div>
            <div class="actions">
              <% if (!msg.read) { %>
                <form method="POST" action="/messages/<%= msg._id %>/read" class="d-inline">
                  <button class="btn btn-outline-success btn-sm" title="Mark as Read">‚úÖ</button>
                </form>
              <% } %>
              <form method="POST" action="/messages/<%= msg._id %>/delete" class="d-inline">
                <button class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this message?')">üóëÔ∏è</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-info text-center">No messages found for the selected filter.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
