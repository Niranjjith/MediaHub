<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | College Portal</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      overflow: hidden;
    }

    .login-container {
      background: #fff;
      border-radius: 20px;
      padding: 40px 35px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      animation: slideIn 0.8s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .login-container h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
      font-size: 28px;
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
      width: 100%;
      padding: 12px 16px;
      margin: 12px 0;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #f9f9f9;
      transition: all 0.3s ease;
      font-size: 15px;
    }

    input:focus {
      outline: none;
      background-color: #fff;
      border-color: #7a5ce3;
      box-shadow: 0 0 0 2px rgba(122, 92, 227, 0.2);
    }

    .password-container {
      position: relative;
      display: flex;
      align-items: center;
    }

    .password-container input {
      padding-right: 60px;
    }

    .toggle-password {
      position: absolute;
      right: 15px;
      font-size: 14px;
      color: #555;
      cursor: pointer;
      user-select: none;
    }

    button {
      width: 100%;
      padding: 12px;
      background: #7a5ce3;
      color: #fff;
      border: none;
      border-radius: 10px;
      font-weight: bold;
      font-size: 16px;
      cursor: pointer;
      margin-top: 10px;
      transition: all 0.3s ease;
    }

    button:hover {
      background: #5a3d91;
    }

    .error-message {
      color: #e74c3c;
      font-size: 0.9rem;
      margin-top: -5px;
      margin-bottom: 10px;
      text-align: center;
    }

    .links {
      margin-top: 20px;
      text-align: center;
      font-size: 0.9rem;
      color: #555;
    }

    .links a {
      color: #7a5ce3;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .links a:hover {
      color: #5a3d91;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Login</h2>

    <% if (typeof errorMessage !== 'undefined') { %>
      <div class="error-message"><%= errorMessage %></div>
    <% } %>

    <form action="/login" method="POST">
      <input 
        name="email" 
        type="email" 
        placeholder="Email" 
        value="<%= typeof email !== 'undefined' ? email : '' %>" 
        required 
      />

      <div class="password-container">
        <input 
          name="password" 
          id="password" 
          type="password" 
          placeholder="Password" 
          required 
        />
        <span class="toggle-password" onclick="togglePassword()">Show</span>
      </div>

      <button type="submit">Login</button>
    </form>

    <div class="links">
      <p>Not registered? <a href="/signup">Sign up</a></p>
      <p><a href="/">Back to Home</a></p>
    </div>
  </div>

  <script>
    function togglePassword() {
      const pwd = document.getElementById('password');
      const toggle = document.querySelector('.toggle-password');
      if (pwd.type === 'password') {
        pwd.type = 'text';
        toggle.textContent = 'Hide';
      } else {
        pwd.type = 'password';
        toggle.textContent = 'Show';
      }
    }
  </script>
</body>
</html>
